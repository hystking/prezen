h1
  font-size: 128px
  margin: 1em 0 0 0
  
h2
  font-size: 64px
  margin: 1em 0 0 0
  
h3
  font-size: 48px
  margin: 1em 0 0 0

p
  font-size: 32px
  width: 50%
  text-align: left
  margin: 1em auto 0 auto
  
strong
  color: #ddd;
  -webkit-text-stroke: .03em black
  
a
  color: #aaa;
  
a:hover
  text-decoration: none

ul,
ol
  font-size: 32px
  text-align: left
  width: 50%
  margin: 1em auto 0 auto
  
ul>li
  list-style-type: disc;
ol>li
  list-style-type: decimal;
    
img
  display: block
  margin: 32px auto 0 auto
