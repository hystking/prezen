& 
  position: absolute
  overflow: hidden
  width: 100%
  height: 100%
  
  pointer-events: none
  user-select: none
  
  opacity: 0

.inner
  position: absolute
  width: 100%
  
.inner *:first-child
  margin-top: 0

.inner *:last-child
  margin-bottom: 0

&.show
  opacity: 1
  pointer-events: auto
